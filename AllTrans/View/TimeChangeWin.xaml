<Window x:Class="AllTrans.View.TimeChangeWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AllTrans.View"
        mc:Ignorable="d"
        Title="TimeChangeWin" Height="400" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Text="Введите новое значение" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="Text" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,42,0,0"/>
        <TextBox x:Name="Name" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,85,0,0"/>
        <TextBox x:Name="Stop" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,121,0,0"/>
        <Button Content="Изменить" HorizontalAlignment="Center" Margin="0,192,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
